 * 剧本列表页面样式
 * 使用rpx响应式单位，支持多设备适配
 */

/* 页面整体布局 */
.scripts-page.data-v-853bf1d0 {
	min-height: 100vh;
	background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
	padding-bottom: 120rpx;
}

/* 搜索栏样式 */
.search-bar.data-v-853bf1d0 {
	position: -webkit-sticky;
	position: sticky;
	top: 0;
	z-index: 100;
	background: rgba(255, 255, 255, 0.95);
	-webkit-backdrop-filter: blur(20rpx);
	        backdrop-filter: blur(20rpx);
	padding: 20rpx 30rpx;
	border-bottom: 2rpx solid #f0f0f0;
}
.search-input.data-v-853bf1d0 {
	width: 100%;
	height: 80rpx;
	background: #f8f9fa;
	border-radius: 40rpx;
	padding: 0 40rpx;
	font-size: 28rpx;
	color: #333;
	border: 2rpx solid transparent;
	transition: all 0.3s ease;
}
.search-input.data-v-853bf1d0:focus {
	background: #fff;
	border-color: #667eea;
	box-shadow: 0 0 20rpx rgba(102, 126, 234, 0.2);
}

/* 分类标签栏 */
.category-tabs.data-v-853bf1d0 {
	background: #fff;
	padding: 20rpx 0;
	border-bottom: 2rpx solid #f0f0f0;
}
.category-scroll.data-v-853bf1d0 {
	white-space: nowrap;
	padding: 0 30rpx;
}
.category-item.data-v-853bf1d0 {
	display: inline-block;
	padding: 12rpx 24rpx;
	margin-right: 16rpx;
	background: #f8f9fa;
	color: #666;
	border-radius: 40rpx;
	font-size: 26rpx;
	transition: all 0.3s ease;
	border: 2rpx solid transparent;
}
.category-item.active.data-v-853bf1d0 {
	background: linear-gradient(135deg, #667eea, #764ba2);
	color: #fff;
	-webkit-transform: scale(1.05);
	        transform: scale(1.05);
	box-shadow: 0 8rpx 20rpx rgba(102, 126, 234, 0.3);
}

/* 排序工具栏 */
.sort-toolbar.data-v-853bf1d0 {
	background: #fff;
	padding: 20rpx 30rpx;
	display: flex;
	align-items: center;
	justify-content: space-between;
	border-bottom: 2rpx solid #f0f0f0;
}
.sort-options.data-v-853bf1d0 {
	display: flex;
	align-items: center;
}
.sort-item.data-v-853bf1d0 {
	padding: 12rpx 20rpx;
	margin-right: 16rpx;
	background: #f8f9fa;
	color: #666;
	border-radius: 20rpx;
	font-size: 24rpx;
	transition: all 0.3s ease;
	position: relative;
}
.sort-item.active.data-v-853bf1d0 {
	background: #667eea;
	color: #fff;
}
.sort-item.data-v-853bf1d0::after {
	content: '';
	position: absolute;
	right: 6rpx;
	top: 50%;
	-webkit-transform: translateY(-50%);
	        transform: translateY(-50%);
	width: 0;
	height: 0;
	border-left: 6rpx solid transparent;
	border-right: 6rpx solid transparent;
	border-top: 8rpx solid currentColor;
}
.sort-item.active.desc.data-v-853bf1d0::after {
	border-top: none;
	border-bottom: 8rpx solid currentColor;
}
.result-count.data-v-853bf1d0 {
	font-size: 24rpx;
	color: #999;
}

/* 剧本列表网格布局 */
.scripts-grid.data-v-853bf1d0 {
	padding: 20rpx 30rpx;
	display: grid;
	grid-template-columns: repeat(2, 1fr);
	gap: 20rpx;
}
.script-card.data-v-853bf1d0 {
	background: #fff;
	border-radius: 24rpx;
	overflow: hidden;
	box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
	transition: all 0.3s ease;
	position: relative;
}
.script-card.data-v-853bf1d0:hover {
	-webkit-transform: translateY(-8rpx);
	        transform: translateY(-8rpx);
	box-shadow: 0 16rpx 48rpx rgba(0, 0, 0, 0.15);
}
.script-card.data-v-853bf1d0:active {
	-webkit-transform: translateY(-4rpx);
	        transform: translateY(-4rpx);
}

/* 剧本封面 */
.script-cover.data-v-853bf1d0 {
	position: relative;
	height: 240rpx;
	overflow: hidden;
}
.cover-image.data-v-853bf1d0 {
	width: 100%;
	height: 100%;
	object-fit: cover;
	transition: -webkit-transform 0.3s ease;
	transition: transform 0.3s ease;
	transition: transform 0.3s ease, -webkit-transform 0.3s ease;
}
.script-card:hover .cover-image.data-v-853bf1d0 {
	-webkit-transform: scale(1.05);
	        transform: scale(1.05);
}
.cover-overlay.data-v-853bf1d0 {
	position: absolute;
	top: 0;
	left: 0;
	right: 0;
	bottom: 0;
	background: linear-gradient(
		180deg,
		rgba(0, 0, 0, 0) 0%,
		rgba(0, 0, 0, 0.3) 70%,
		rgba(0, 0, 0, 0.6) 100%
	);
}
.hot-badge.data-v-853bf1d0 {
	position: absolute;
	top: 16rpx;
	left: 16rpx;
	background: linear-gradient(135deg, #ff6b6b, #ff8e53);
	color: #fff;
	padding: 8rpx 16rpx;
	border-radius: 20rpx;
	font-size: 20rpx;
	font-weight: bold;
	box-shadow: 0 4rpx 12rpx rgba(255, 107, 107, 0.4);
}
.difficulty-badge.data-v-853bf1d0 {
	position: absolute;
	top: 16rpx;
	right: 16rpx;
	padding: 8rpx 16rpx;
	border-radius: 20rpx;
	font-size: 20rpx;
	font-weight: bold;
	color: #fff;
}
.difficulty-badge.easy.data-v-853bf1d0 {
	background: linear-gradient(135deg, #51cf66, #40c057);
}
.difficulty-badge.medium.data-v-853bf1d0 {
	background: linear-gradient(135deg, #ffd43b, #fab005);
}
.difficulty-badge.hard.data-v-853bf1d0 {
	background: linear-gradient(135deg, #ff6b6b, #fa5252);
}

/* 剧本信息 */
.script-info.data-v-853bf1d0 {
	padding: 24rpx;
}
.script-title.data-v-853bf1d0 {
	font-size: 32rpx;
	font-weight: bold;
	color: #333;
	margin-bottom: 12rpx;
	line-height: 1.2;
	display: -webkit-box;
	-webkit-box-orient: vertical;
	-webkit-line-clamp: 1;
	line-clamp: 1;
	overflow: hidden;
}
.script-tags.data-v-853bf1d0 {
	display: flex;
	flex-wrap: wrap;
	gap: 8rpx;
	margin-bottom: 16rpx;
}
.tag-item.data-v-853bf1d0 {
	padding: 6rpx 12rpx;
	background: #f8f9fa;
	color: #666;
	border-radius: 12rpx;
	font-size: 20rpx;
}
.script-description.data-v-853bf1d0 {
	font-size: 24rpx;
	color: #666;
	line-height: 1.4;
	margin-bottom: 16rpx;
	display: -webkit-box;
	-webkit-box-orient: vertical;
	-webkit-line-clamp: 2;
	line-clamp: 2;
	overflow: hidden;
}
.script-meta.data-v-853bf1d0 {
	display: flex;
	align-items: center;
	justify-content: space-between;
	font-size: 22rpx;
	color: #999;
	margin-bottom: 16rpx;
}
.meta-item.data-v-853bf1d0 {
	display: flex;
	align-items: center;
	gap: 4rpx;
}
.script-bottom.data-v-853bf1d0 {
	display: flex;
	align-items: center;
	justify-content: space-between;
}
.script-price.data-v-853bf1d0 {
	font-size: 28rpx;
	font-weight: bold;
	color: #ff6b6b;
}
.price-unit.data-v-853bf1d0 {
	font-size: 20rpx;
	color: #999;
}
.script-rating.data-v-853bf1d0 {
	display: flex;
	align-items: center;
	gap: 8rpx;
}
.rating-stars.data-v-853bf1d0 {
	color: #ffd43b;
	font-size: 24rpx;
}
.rating-score.data-v-853bf1d0 {
	font-size: 22rpx;
	color: #666;
}
.available-sessions.data-v-853bf1d0 {
	font-size: 20rpx;
	color: #667eea;
	padding: 4rpx 8rpx;
	background: rgba(102, 126, 234, 0.1);
	border-radius: 8rpx;
}

/* 加载状态 */
.loading-container.data-v-853bf1d0 {
	display: flex;
	align-items: center;
	justify-content: center;
	padding: 60rpx 0;
}
.loading-text.data-v-853bf1d0 {
	font-size: 28rpx;
	color: #666;
	margin-left: 20rpx;
}
.load-more-container.data-v-853bf1d0 {
	display: flex;
	align-items: center;
	justify-content: center;
	padding: 40rpx 0;
	background: rgba(255, 255, 255, 0.8);
	margin: 20rpx 30rpx;
	border-radius: 20rpx;
}
.load-more-text.data-v-853bf1d0 {
	font-size: 26rpx;
	color: #999;
}

/* 空状态 */
.empty-container.data-v-853bf1d0 {
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
	padding: 120rpx 60rpx;
	text-align: center;
}
.empty-icon.data-v-853bf1d0 {
	font-size: 120rpx;
	color: #ddd;
	margin-bottom: 24rpx;
}
.empty-title.data-v-853bf1d0 {
	font-size: 32rpx;
	color: #999;
	margin-bottom: 16rpx;
}
.empty-description.data-v-853bf1d0 {
	font-size: 24rpx;
	color: #ccc;
	line-height: 1.5;
}
.reset-button.data-v-853bf1d0 {
	margin-top: 40rpx;
	padding: 20rpx 40rpx;
	background: linear-gradient(135deg, #667eea, #764ba2);
	color: #fff;
	border-radius: 40rpx;
	font-size: 28rpx;
	border: none;
}

/* 骨架屏效果 */
.skeleton-card.data-v-853bf1d0 {
	background: #fff;
	border-radius: 24rpx;
	overflow: hidden;
	box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}
.skeleton-cover.data-v-853bf1d0 {
	height: 240rpx;
	background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
	background-size: 200% 100%;
	-webkit-animation: skeleton-loading-data-v-853bf1d0 1.5s infinite;
	        animation: skeleton-loading-data-v-853bf1d0 1.5s infinite;
}
.skeleton-info.data-v-853bf1d0 {
	padding: 24rpx;
}
.skeleton-line.data-v-853bf1d0 {
	height: 28rpx;
	background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
	background-size: 200% 100%;
	-webkit-animation: skeleton-loading-data-v-853bf1d0 1.5s infinite;
	        animation: skeleton-loading-data-v-853bf1d0 1.5s infinite;
	border-radius: 4rpx;
	margin-bottom: 16rpx;
}
.skeleton-line.short.data-v-853bf1d0 {
	width: 60%;
}
.skeleton-line.medium.data-v-853bf1d0 {
	width: 80%;
}
@-webkit-keyframes skeleton-loading-data-v-853bf1d0 {
0% {
		background-position: 200% 0;
}
100% {
		background-position: -200% 0;
}
}
@keyframes skeleton-loading-data-v-853bf1d0 {
0% {
		background-position: 200% 0;
}
100% {
		background-position: -200% 0;
}
}

/* 响应式适配 */
@media (max-width: 375px) {
.scripts-grid.data-v-853bf1d0 {
		grid-template-columns: 1fr;
		gap: 16rpx;
		padding: 16rpx 20rpx;
}
.script-card.data-v-853bf1d0 {
		border-radius: 20rpx;
}
.script-cover.data-v-853bf1d0 {
		height: 200rpx;
}
.script-info.data-v-853bf1d0 {
		padding: 20rpx;
}
}
@media (min-width: 768px) {
.scripts-grid.data-v-853bf1d0 {
		grid-template-columns: repeat(3, 1fr);
		max-width: 1200rpx;
		margin: 0 auto;
}
}

