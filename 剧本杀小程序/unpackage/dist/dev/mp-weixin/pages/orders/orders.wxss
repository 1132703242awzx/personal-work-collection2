
.page.data-v-8a71bbb4 {
	background-color: #f8f9fa;
	min-height: 100vh;
}

/* 状态筛选 */
.filter-tabs.data-v-8a71bbb4 {
	display: flex;
	background: white;
	padding: 0 30rpx;
	border-bottom: 1rpx solid #f0f0f0;
	position: -webkit-sticky;
	position: sticky;
	top: 0;
	z-index: 100;
}
.tab-item.data-v-8a71bbb4 {
	flex: 1;
	text-align: center;
	padding: 30rpx 0;
	font-size: 28rpx;
	color: #666;
	position: relative;
	transition: all 0.3s;
}
.tab-item.active.data-v-8a71bbb4 {
	color: #667eea;
	font-weight: bold;
}
.tab-item.active.data-v-8a71bbb4::after {
	content: '';
	position: absolute;
	bottom: 0;
	left: 50%;
	-webkit-transform: translateX(-50%);
	        transform: translateX(-50%);
	width: 60rpx;
	height: 4rpx;
	background: #667eea;
	border-radius: 2rpx;
}

/* 订单列表 */
.orders-list.data-v-8a71bbb4 {
	padding: 20rpx;
}
.order-card.data-v-8a71bbb4 {
	background: white;
	border-radius: 20rpx;
	margin-bottom: 30rpx;
	padding: 30rpx;
	box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}
.order-header.data-v-8a71bbb4 {
	display: flex;
	justify-content: space-between;
	align-items: center;
	margin-bottom: 25rpx;
	padding-bottom: 20rpx;
	border-bottom: 1rpx solid #f0f0f0;
}
.order-number.data-v-8a71bbb4 {
	font-size: 26rpx;
	color: #999;
}
.order-status.data-v-8a71bbb4 {
	padding: 8rpx 16rpx;
	border-radius: 16rpx;
	font-size: 22rpx;
}
.order-status.upcoming.data-v-8a71bbb4 {
	background: #e3f2fd;
	color: #1976d2;
}
.order-status.completed.data-v-8a71bbb4 {
	background: #e8f5e8;
	color: #2e7d32;
}
.order-status.cancelled.data-v-8a71bbb4 {
	background: #ffebee;
	color: #c62828;
}

/* 订单内容 */
.order-content.data-v-8a71bbb4 {
	display: flex;
	margin-bottom: 25rpx;
}
.script-cover.data-v-8a71bbb4 {
	width: 120rpx;
	height: 160rpx;
	border-radius: 10rpx;
	margin-right: 25rpx;
	object-fit: cover;
}
.order-info.data-v-8a71bbb4 {
	flex: 1;
}
.script-name.data-v-8a71bbb4 {
	font-size: 36rpx;
	font-weight: bold;
	color: #333;
	display: block;
	margin-bottom: 20rpx;
}
.order-details.data-v-8a71bbb4 {
	gap: 10rpx;
}
.detail-row.data-v-8a71bbb4 {
	display: flex;
	margin-bottom: 10rpx;
}
.detail-label.data-v-8a71bbb4 {
	font-size: 26rpx;
	color: #666;
	min-width: 140rpx;
}
.detail-value.data-v-8a71bbb4 {
	font-size: 26rpx;
	color: #333;
	flex: 1;
}

/* 价格信息 */
.order-price.data-v-8a71bbb4 {
	display: flex;
	justify-content: flex-end;
	align-items: center;
	margin-bottom: 25rpx;
	padding: 20rpx 0;
	border-top: 1rpx solid #f0f0f0;
	border-bottom: 1rpx solid #f0f0f0;
}
.price-label.data-v-8a71bbb4 {
	font-size: 28rpx;
	color: #333;
	margin-right: 15rpx;
}
.price-value.data-v-8a71bbb4 {
	font-size: 36rpx;
	font-weight: bold;
	color: #ff6b6b;
}

/* 操作按钮 */
.order-actions.data-v-8a71bbb4 {
	display: flex;
	gap: 20rpx;
	flex-wrap: wrap;
}
.action-btn.data-v-8a71bbb4 {
	padding: 15rpx 30rpx;
	border-radius: 20rpx;
	font-size: 26rpx;
	text-align: center;
	min-width: 140rpx;
	transition: all 0.3s;
}
.action-btn.secondary.data-v-8a71bbb4 {
	background: #f8f9fa;
	color: #666;
	border: 1rpx solid #dee2e6;
}
.action-btn.primary.data-v-8a71bbb4 {
	background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
	color: white;
}

/* 倒计时 */
.countdown.data-v-8a71bbb4 {
	margin-top: 20rpx;
	padding: 15rpx;
	background: #fff3cd;
	border-radius: 10rpx;
	text-align: center;
}
.countdown-text.data-v-8a71bbb4 {
	font-size: 24rpx;
	color: #856404;
}

/* 空状态 */
.empty-state.data-v-8a71bbb4 {
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
	padding: 100rpx 50rpx;
	text-align: center;
}
.empty-image.data-v-8a71bbb4 {
	width: 300rpx;
	height: 300rpx;
	margin-bottom: 40rpx;
	opacity: 0.6;
}
.empty-text.data-v-8a71bbb4 {
	font-size: 32rpx;
	color: #999;
	margin-bottom: 50rpx;
}
.empty-action.data-v-8a71bbb4 {
	background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
	color: white;
	padding: 25rpx 50rpx;
	border-radius: 25rpx;
	font-size: 30rpx;
}

